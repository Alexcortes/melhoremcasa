<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.ChooseScreen"
    android:background="#F5F5F5"
    android:contextClickable="false">

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Melhor em Casa"
        android:id="@+id/melhor_em_casa_button"
        android:textColor="#080808"
        android:singleLine="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:background="@drawable/screen_border"
        android:layout_alignEnd="@+id/logo" />


    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Farmácia Popular"
        android:id="@+id/farm_popular_button"
        android:textColor="#080808"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/melhor_em_casa_button"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/melhor_em_casa_button"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="140dp"
        android:background="@drawable/screen_border"
        android:focusable="true" />


    <ImageView
        android:id="@+id/logo"
        android:src="@mipmap/saude_em_casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/melhoremcasalogo"
        android:src="@mipmap/melhor_em_casa"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="21dp" />

    <ImageView
        android:id="@+id/farmpopularlogo"
        android:src="@mipmap/farm_popular"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/melhoremcasalogo"
        android:layout_toEndOf="@+id/melhoremcasalogo"
        android:layout_marginStart="45dp"
        android:layout_alignBottom="@+id/melhoremcasalogo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/infoButton" />

    <TextView
        android:id="@+id/textView"
        android:text="Conheça os programas: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_above="@+id/melhoremcasalogo"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/infoButton"
        android:src="@mipmap/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/logo" />

</RelativeLayout>