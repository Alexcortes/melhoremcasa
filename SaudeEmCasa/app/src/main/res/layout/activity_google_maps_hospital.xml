<?xmls version="1.0 encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal">

<fragment
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clickable="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/topbar_description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map"
        android:layout_alignParentStart="true">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="mds.gpp.saudeemcasa.view.HospitalScreen"
            android:id="@+id/fragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topbar_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#53636b"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/topbar_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Dados do Hospital"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/topbar_back" />

        <ImageButton
            android:id="@+id/topbar_logo"
            android:background="@mipmap/logo_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickAbout"
            android:contentDescription="@string/logo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/topbar_back"
            android:background="@mipmap/arrow_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="goToConfiguration"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
