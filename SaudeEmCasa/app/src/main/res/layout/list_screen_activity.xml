<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/container"
     android:animateLayoutChanges="false"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topbar_search_layer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="65dp"
            android:background="#ABABAB" >

            <ListView
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:dividerHeight="1dp"
                android:divider="#E6E5EC"
                android:clickable="true"
                android:layout_below="@+id/topbar_description"
                android:layout_alignParentStart="true"
                android:choiceMode="singleChoice"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:id="@+id/topbar_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#536571"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/topbar_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:text="Lista de FarmÃ¡cias"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/topbar_logo"
                    android:background="@mipmap/logo_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="onClickAbout"
                    android:contentDescription="image_description_default"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:id="@+id/topbar_back"
                    android:background="@mipmap/arrow_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="image_description_default"
                    android:onClick="goToConfiguration"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>