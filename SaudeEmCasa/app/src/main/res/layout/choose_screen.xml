<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.ChooseScreen"
    android:background="#BEC0AC"
    android:contextClickable="false">

    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Melhor em Casa"
        android:id="@+id/melhor_em_casa_button"
        android:textColor="#ffffff"
        android:background="#2585ff"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/farmpopularlogo"
        android:layout_toEndOf="@+id/melhoremcasalogo" />


    <Button
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="FarmÃ¡cia Popular"
        android:id="@+id/farm_popular_button"
        android:layout_marginBottom="119dp"
        android:textColor="#ffffff"
        android:background="#2585ff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/melhor_em_casa_button" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/melhoremcasalogo"
        android:src="@mipmap/melhor_em_casa"
        android:layout_alignTop="@+id/melhor_em_casa_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp" />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/farmpopularlogo"
        android:src="@mipmap/farmacia_popular"
        android:layout_alignBottom="@+id/farm_popular_button"
        android:layout_alignEnd="@+id/melhoremcasalogo"/>

</RelativeLayout>