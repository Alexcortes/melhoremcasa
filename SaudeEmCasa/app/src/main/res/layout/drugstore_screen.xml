<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".view.DrugstoreScreen"
    android:background="#F5F5F5"
    android:contextClickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CEP"
        android:id="@+id/textViewCep"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textViewAddress"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="drugstoreName"
        android:id="@+id/textViewDrugName"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/textViewAddress"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textViewDrugName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telephone"
        android:id="@+id/textViewDrugTel"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textViewCep"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:id="@+id/phonecallButtonDrugstore"
        android:src="@mipmap/phonecall_icon"
        android:layout_below="@+id/textViewCep"
        android:layout_alignEnd="@+id/textViewCep"
        android:layout_marginTop="19dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarUser"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nota"
        android:id="@+id/textViewRating"
        android:layout_above="@+id/ratingBarUser"
        android:layout_alignStart="@+id/ratingBarUser" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingBarFinal"
        android:layout_above="@+id/ratingBarUser"
        android:layout_toEndOf="@+id/textViewRating"
        android:numStars="5"
        android:stepSize="1" />

</RelativeLayout>